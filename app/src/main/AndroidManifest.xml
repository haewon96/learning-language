<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.sungshin.lnk.learningnorthkorean">

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.MoviesActivity"
            android:label="@string/all_movies" />
        <activity
            android:name=".activity.QuizActivity"
            android:label="@string/all_quiz" />
        <activity
            android:name=".activity.DictionaryActivity"
            android:label="@string/all_dictionary"
            android:theme="@style/DictionaryTheme" />
        <activity
            android:name=".activity.SituationActivity"
            android:label="@string/all_situation" />
        <activity
            android:name=".activity.TranslatorActivity"
            android:label="@string/all_translate"
            android:theme="@style/TranslateTheme" />
        <activity
            android:name=".activity.RecognizeTextActivity"
            android:theme="@style/Theme.Design.NoActionBar" />
        <activity
            android:name=".activity.DictionaryDetailActivity"
            android:label=""
            android:theme="@style/DictionaryTheme" />
        <activity
            android:name=".activity.DictionaryScrapActivity"
            android:label="@string/dic_scrap"
            android:theme="@style/DictionaryTheme" />

    </application>

</manifest>