<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#eeeeee"
        android:layout_margin="10dp">
<!--        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/ic_search_24dp"
            android:layout_weight="0.3"
            />-->

        <Button
            android:id="@+id/btn_toggle_language"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="남한어"
            android:textSize="15dp"
            android:textColor="#ffffff"
            android:background="@color/colorDictionary"
            android:layout_weight="0"/>
        <EditText
            android:id="@+id/et_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="6"
            android:layout_margin="5dp"
            />
        <ImageButton
            android:id="@+id/btn_search"
            android:layout_width="wrap_content"
            android:layout_height="38dp"
            android:layout_weight="0.3"
            android:layout_margin="10dp"
            android:background="@drawable/ic_search_24dp" />

    </LinearLayout>
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp">

    <TableRow>

        <TextView
            android:layout_weight="1"
            android:gravity="center"
            android:text="남한어"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_marginRight="0.3dp"
            android:background="@color/colorDictionaryBackground"
            android:padding="2dp"/>
        <TextView
            android:layout_weight="1"
            android:gravity="center"
            android:text="북한어"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_marginLeft="0.3dp"
            android:background="@color/colorDictionaryBackground"
            android:padding="2dp"/>
    </TableRow>
    </TableLayout>
    <LinearLayout
        android:id="@+id/layout_dictionary"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ListView
            android:id="@+id/lv_dictionary"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </ListView>
    </LinearLayout>
</LinearLayout>